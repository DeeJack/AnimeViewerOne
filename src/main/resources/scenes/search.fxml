<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import me.deejack.animeviewer.gui.components.filters.FilterList?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" alignment="CENTER" prefHeight="200.0" prefWidth="601.0"
      maxHeight="Infinity"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="me.deejack.animeviewer.gui.controllers.SearchController">
    <HBox alignment="CENTER" spacing="15.0">
        <Label layoutX="140.0" layoutY="145.0" text="Cerca:"/>
        <TextField id="txtSearch" fx:id="txtSearchName" prefHeight="25.0" prefWidth="275.0" promptText="Cerca..."/>
        <Button id="btnSearchName" fx:id="btnSearchName" mnemonicParsing="false" onAction="#onSearchNameClicked"
                text="Cerca"/>
    </HBox>
    <TitledPane fx:id="titledPane" expanded="false" text="Filtri">
        <ScrollPane>
            <FilterList/>
        </ScrollPane>
    </TitledPane>
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
</VBox>
