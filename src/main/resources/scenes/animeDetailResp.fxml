<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <HBox alignment="CENTER">
        <AnchorPane prefHeight="525.0" prefWidth="71.0" HBox.hgrow="ALWAYS">
            <Button id="btnBack" fx:id="btnBack" alignment="CENTER" ellipsisString="&lt;" layoutY="2.0"
                    mnemonicParsing="false" prefHeight="29.0" prefWidth="29.0" text="&lt;"/>
        </AnchorPane>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" HBox.hgrow="ALWAYS">
            <BorderPane>
                <top>
                    <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                        <ImageView fx:id="image" fitHeight="213.0" fitWidth="673.0" pickOnBounds="true"/>
                    </HBox>
                </top>
                <center>
                    <BorderPane BorderPane.alignment="CENTER">
                        <center>
                            <TextArea fx:id="description" editable="false" prefHeight="142.0" prefWidth="606.0"
                                      wrapText="true"/>
                        </center>
                        <right>
                            <VBox fx:id="vBoxImg">
                                <Hyperlink fx:id="hyperLink" alignment="CENTER" prefHeight="23.0"
                                           prefWidth="98.0" text="Apri nel browser" textAlignment="CENTER"/>
                                <!--<ImageView fx:id="imgFavorite" fitHeight="53.0" fitWidth="59.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <Image url="/assets/non-favorite.png"/>
                                </ImageView>-->
                            </VBox>
                        </right>
                    </BorderPane>
                </center>
                <bottom>
                    <!--<ListView fx:id="listview" minHeight="158.0" prefHeight="158.0" prefWidth="530.0"
                              BorderPane.alignment="CENTER"/>-->
                </bottom>
            </BorderPane>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </ScrollPane>
        <AnchorPane prefHeight="525.0" prefWidth="71.0" HBox.hgrow="ALWAYS"/>
    </HBox>
</StackPane>
