<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import me.deejack.animeviewer.gui.components.ButtonFavorite?>
<?import me.deejack.animeviewer.gui.components.ButtonHistory?>
<?import me.deejack.animeviewer.gui.components.ListViewSites?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: white;"
           xmlns="http://javafx.com/javafx/8.0.171"
           fx:controller="me.deejack.animeviewer.gui.controllers.HomeController">
    <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="498.0" prefWidth="698.0"
          style="-fx-background-color: white;" StackPane.alignment="CENTER">
        <VBox alignment="CENTER" spacing="30">
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="384.0">
                <ImageView id="imgSite" fx:id="imgSite" fitHeight="100.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="/assets/load.gif"/>
                    <viewport>
                        <Rectangle2D/>
                    </viewport>
                </ImageView>
            </HBox>
            <fx:include source="/scenes/search.fxml"/>
            <ListViewSites fx:id="lstSites" prefHeight="136.0"
                           prefWidth="335.0"/>
            <BorderPane>
                <left>
                    <TextField fx:id="txtStreaming" prefHeight="31.0" prefWidth="384.0"
                               promptText="Link streaming:" alignment="CENTER_LEFT"/>
                </left>
                <right>
                    <Button fx:id="btnStreaming" mnemonicParsing="false" text="Apri"
                            alignment="CENTER_RIGHT"/>
                </right>
            </BorderPane>
            <BorderPane>
                <left>
                    <ButtonFavorite mnemonicParsing="false"/>
                </left>
                <right>
                    <ButtonHistory mnemonicParsing="false" alignment="BOTTOM_RIGHT"/>
                </right>
            </BorderPane>
        </VBox>
    </HBox>
</StackPane>
